            android:name="com.adyen.checkout.ui.internal.common.activity.RedirectHandlerActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Checkout.Internal.Translucent"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="com.dblackwave.adyen.test"
                    android:scheme="checkout" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.adyen.checkout.ui.internal.card.CardDetailsActivity"
